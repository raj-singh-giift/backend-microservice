{
  "name": "production-backend-api",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend with comprehensive security and features",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node src/app.js",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "debug": "NODE_ENV=development DEBUG=app:* nodemon src/app.js",
    "test": "NODE_ENV=test jest",
    "lint": "eslint src/**/*.js",
    "security-audit": "npm audit --audit-level=moderate",
    "docker:build": "docker build -t production-backend .",
    "docker:run": "docker run -p 3000:3000 production-backend"
  },
  "dependencies": {
    "async_hooks": "^1.0.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cls-rtracer": "^2.6.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "debug": "^4.4.1",
    "dotenv": "^17.2.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.6.0",
    "trim-request": "^1.0.6",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "production",
    "api",
    "backend",
    "security",
    "winston",
    "joi",
    "postgresql",
    "redis"
